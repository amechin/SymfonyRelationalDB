{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <section id="main">
        <div class="container d-flex align-items-center justify-content-center">
            <div class="row">
                {{ form_start(formulaire) }}
                <div class="errors">
                    {{ form_errors(formulaire) }}
                </div>
                <div class="row">
                    <div class="col-md-6">{{ form_row(formulaire.nom, { 'label': 'Nom Produit' }) }}</div>
                    <div class="col-md-6">{{ form_row(formulaire.categorie, { 'label': 'Cat√©gorie' }) }}</div>
                </div>
                <div class="row">
                    <div class="col-md-6">{{ form_row(formulaire.prix, { 'label': 'Prix' }) }}</div>
                    <div class="col-md-6">{{ form_row(formulaire.description, { 'label': 'Description' }) }}</div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <a href="{{ path('produit_index')}}" class="btn btn-outline-dark">Retour</a>
                    </div>
                    <div class="col-md-6 text-right">{{ form_row(formulaire.valider, { 'label': 'Valider',
                            'attr': {'class': 'btn btn-light'} }) }}
                    </div>

                </div>
                {{ form_end(formulaire) }}
            </div>
        </div>
    </section>
{% endblock %}
